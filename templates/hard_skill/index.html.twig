{% extends 'base.html.twig' %}

{% block title %}HardSkill index
{% endblock %}

{% block body %}
	<h1>HardSkill index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Image</th>
				<th>Nom</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for hard_skill in hard_skills %}
				<tr>
					<td>{{ hard_skill.id }}</td>
					<td>{{ hard_skill.image }}</td>
					<td>{{ hard_skill.nom }}</td>
					<td>{{ hard_skill.description }}</td>
					<td>
						<a href="{{ path('app_hard_skill_show', {'id': hard_skill.id}) }}">show</a>
						<a href="{{ path('app_hard_skill_edit', {'id': hard_skill.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_hard_skill_new') }}">Create new</a>
{% endblock %}
